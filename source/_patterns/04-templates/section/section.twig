<div class="section-06" id="blog">
    <div class="w1400px">
        <div class="container-fluid">
            {% include "atoms-sectitle" with {sectitle:section_06.sectitle} %} {% set info = section_06.info %} {% include "organisms-info"
            with { includeFile:"molecules-infobox"} %}
        </div>
        <!--section 06-->
    </div>
