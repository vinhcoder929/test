<div class="infobox-01{{infoboxStyleModifier}}">

 {% if item.sectitle %}
     <div class="box__sectitle">
         {{item.sectitle}}
     </div>
 {% endif %}

{% if item.image %}
    <div class="box__image">
        {% include "atoms-image" with { img: item.image } %}
    </div>
{% endif %}

{% if item.number %}
    <div class="box__number">
        {{item.number}}
    </div>
{% endif %}

{% if item.calendar %}
    <div class="box__calendar">
        <div class="box__date">
            {{item.calendar.date}}
        </div>
        <div class="box__month">
            {{item.calendar.month}}
        </div>
{% endif %}

{% if item.title %}
    <div class="box__title">
        {{item.title}}
    </div>
{% endif %}

{% if item.time %}
    <div class="box__times">
        {{item.time}}
    </div>
{% endif %}

{% if item.location %}
    <div class="box__location">
        {{item.location}}
    </div>
{% endif %}

{% if item.description %}
    <div class="box__desc">
        {{item.description}}
    </div>
{% endif %}

{% if item.imageBottom %}
    {% include "atoms-image" with { img: item.imageBottom } %}
{% endif %}
</div>
