<div class="section-07" id="rsvp">
    <div class="container-fluid">
        {% include "molecules-title" with {title:section_07.title }%}
        {% import 'form.twig' as form %}
        <div class="form-bg">
            <form id="attend-form" action="#" method="post">
                <div class="row">
                    <fieldset class="form-group group-01">
                        <p class="form__item col-md-6">
                            {{ form.text('attend-form-name',null, 'Your Name ') }}
                        </p>

                        <p class="form__item col-md-6">
                            {{ form.email('attend-form-email', null, 'Your Email ') }}
                        </p>
                    </fieldset>

                    <fieldset class="form-group form-inline radio-choice col-lg-12 group-02">
                        <h4> Will you attend? </h4>
                        <div class="form-group form-inline">

                            <div class="form-group">
                                <div class="form-check">
                                    <label for="attend-form-radio-1" class="control control--radio">Yes, I will be there
                                        <input type="radio" name="attend-form-radio" id="attend-form-radio-1" tabindex="2" value="I will come">
                                        <div class="control__indicator"></div>
                                    </label>
                                </div>

                                <div class="form-check">
                                    <label for="attend-form-radio-2" class="control control--radio">Sorry, I can't come
                                        <input type="radio" name="attend-form-radio" id="attend-form-radio-2" tabindex="3" value="No, I can not come">
                                        <div class="control__indicator"></div>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </fieldset>

                    <fieldset class="form-group col-lg-12 group-03  ">
                        <p class="form__item col-md-6 form-check">
                            <select class="form-control" name="attend-form-select-choice" id="attend-form-select-choice">
                                <option selected value="I eat anything">I eat anything</option>
                                <option value="I eat vegetarian food">I eat vegetarian food</option>
                            </select>
                        </p>

                        <p class="form__item col-md-6">
                            <textarea class="form-control" form="attend-form" name="attend-form-notes" rows="1" placeholder="Notes"></textarea>
                        </p>
                    </fieldset>

                    <div class="text-xs-center">
                        <button type="submit" class="btn-attend">Sign your RSVP</button>
                    </div>
                </div>
            </form>

            {% include "atoms-decoration" with {decoration:section_07.decoration} %}
            {% include "atoms-decoration" with {decoration:section_07.decoration_02} %}
        </div>
    </div>
</div>

<div class="section-08">
    <div class="clearfix"></div>
    <div class="wedding mx-auto">
        {% set wedding = section_08.wedding %}
        <div class="wedding__date">{{wedding.date}}</div>
        <div class="wedding__time">{{wedding.time}}
        </div>
        <div class="wedding__couple">{{wedding.couple.bride}}<span>&</span></br>{{wedding.couple.groom}}</div>

        {% include "atoms-decoration" with {decoration:section_08.decoration} %}
    </div>
</div>
